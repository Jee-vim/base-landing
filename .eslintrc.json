{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:@next/next/recommended", "google", "prettier"],
  "ignorePatterns": [
    "/components/ui/*",
    "/types/*",
    "/next-env.d.ts",
    "/tailwind.config.ts"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-tabs": "off"
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "new-cap": 0,
    "require-jsdoc": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
